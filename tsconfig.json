{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // שורש הפרויקט
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*.ts",         // קבצי TypeScript בשורש
    "Sockets/**/*.ts", // קבצים בתיקיית Sockets
    "type/**/*.ts"     // קבצים בתיקיית type
  ],
  "exclude": [
    "node_modules"
  ]
}
